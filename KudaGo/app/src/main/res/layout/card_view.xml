<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="8dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColorCityMain"
            app:cardBackgroundColor="#84ffff"
            app:cardCornerRadius="20dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/imageEventPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>

            <TextView
                    android:id="@+id/textNameEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="МУЗЫКАЛЬНЫЙ ФЕСТИВАЛЬ LIVEFEST SUMMER"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/imageEventPhoto"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
            />

            <TextView
                    android:id="@+id/textDescriptionEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textNameEvent"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="Первый фестиваль LiveFest на курорте Роза Хутор собрал перспективные музыкальные"
            />

            <ImageView
                    android:id="@+id/imageIcLocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/textDescriptionEvent"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_location_on_black_24dp"/>

            <ImageView
                    android:id="@+id/imageIcDay"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/imageIcLocation"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_today_black_24dp"/>

            <ImageView
                    android:id="@+id/imageIcPrice"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/imageIcDay"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_photo_camera_black_24dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
