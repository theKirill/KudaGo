<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ForOtherText" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorOtherText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ForMainText" parent="android:TextAppearance.Medium">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>
</resources>
